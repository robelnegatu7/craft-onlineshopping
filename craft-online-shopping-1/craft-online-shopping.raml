title: craft-online-shopping

version: 1.0
mediaType: 
- application/json


uses:
  mylib: library.raml

/users:
  description: this is the users resource
  get:
    queryParameters:
      id:
        description: id
        type: integer
        required: true 
      fullname:
        description: fullname & lastname
        type: string
        enum:
          [john,mike]
        required: false
      username: 
        description: username 
        maxLength: 10
        minLength: 4
        required: false
        default: john77
    description: users resource get http status code response. 

    responses:
      200:
        body:
          application/json:
            type: mylib.users
            example: !include Examples/users.json
  # type:
  #  collection: 
  #    resourcePath: users

  is: 
  - mylib.respoMessage:
    
    
 

